@model DoorGodWeb.Models.EmpInfo
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>



<div>

    @using (@Html.BeginForm("Create", "Home", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        <div class="form-group">
            @Html.LabelFor(m => m.EmpNo, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.TextBox("EmpNo", null, new { @class = "form-control" })
                @Html.ValidationMessage("EmpNo")
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.EmpCName, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.TextBox("EmpCName", null, new { @class = "form-control" })
                @Html.ValidationMessage("EmpCName")
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.DeptNo, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.TextBox("DeptNo", null, new { @class = "form-control" })
                @Html.ValidationMessage("DeptNo")
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.ArriveDate, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.TextBox("ArriveDate", null, new { @class = "form-control", placeholder = "yyyy/MM/dd" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.LeaveDate, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.TextBox("LeaveDate", null, new { @class = "form-control", placeholder = "yyyy/MM/dd" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.ReserverLeaveDate, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.TextBox("ReserverLeaveDate", null, new { @class = "form-control", placeholder = "yyyy/MM/dd" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.EMail, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.TextBox("EMail", null, new { @class = "form-control" })
                @Html.ValidationMessage("EMail")
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Sex, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.TextBox("Sex", null, new { @class = "form-control", placeholder = "F、M" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Role, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                <select name="Role" class="form-control">
                    @foreach (SelectListItem i in ViewBag.empRoleListItem)
                    {
                        <option value="@i.Value">@i.Text</option>
                    }
                </select>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.FloorGroups, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.TextBox("FloorGroups", null, new { @class = "form-control", placeholder = "0=All  or  1;3;5" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.ExtCompany, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.TextBox("ExtCompany", null, new { @class = "form-control", placeholder = "" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default">新增</button>
            </div>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
